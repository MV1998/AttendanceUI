<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/customerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Customer Name"/>

        <TextView
            android:id="@+id/customerId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:text="Cust ID"/>

        <ImageView
            android:id="@+id/presentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:src="@drawable/baseline_radio_button_unchecked_24"/>


        <ImageView
            android:id="@+id/absentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:src="@drawable/baseline_radio_button_unchecked_24"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reasonSpinnerLinearId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason"/>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/black"-->
<!--            android:padding="10dp"-->
<!--            android:background="@drawable/outline"-->
<!--            android:text="Not bought a machine"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:id="@+id/reasonSpinnerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/spinner_background"/>
    </LinearLayout>

    <View
        android:id="@+id/separatorViewId"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEBEB"/>


</LinearLayout>